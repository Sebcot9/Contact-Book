{# src/ContactBundle/Resources/views/Contact/add.html.twig #}
{% extends '::connect-base.html.twig' %}
{% block body %}
<h3> Modification du contact </h3>
        <form class="form-large" action="{{path('contact_mod', {id: contact.id})}}"
          method="POST" {{ form_enctype(form) }} novalidate="novalidate">

        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-content">
                        {{ form_errors(form) }}
                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.prenom) }}</span>
                        </div>
                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.nom) }}</span>
                        </div>

                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.tel) }}</span>
                        </div>

                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.email) }}</span>
                        </div>

                        <div class="form-group clearfix">
                            <div class="box-content">
                                {{ form_rest(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('fos_user_profile_show') }}" class="btn btn-md btn-info">
                    <span class="glyphicon glyphicon-arrow-left"></span> Retour
                </a>
                <button type="submit" class="submit btn btn-md btn-success" style="float:right">
                    <span class="glyphicon glyphicon-pencil"></span> Modifier
                </button>
            </div>
        </div>
    </form>
{% endblock %}