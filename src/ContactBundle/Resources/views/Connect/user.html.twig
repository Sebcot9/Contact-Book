{# empty Twig template #}
{% extends '::connect-base.html.twig' %}

{% block body %}
    Bonjour {{ user }}
    <h2>
        {% if contacts is not empty %}Votre liste de contacts{% else %}Ajouter un contact{% endif %}
    </h2>
    
        <a href="{{ path('contact_add')}}" class="btn-close" title="">
               Ajouter un nouveau contact
               <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
    
    {% if contacts is not empty %}
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr class="text-center">
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                </tr>
            </thead>
            <tbody>

                {% for contact in contacts%}
                    <tr>
                        <td>{{contact.nom}}</td>
                        <td>{{contact.prenom}}</td>
                        <td>{{contact.email}}</td>
                        <td>{{contact.tel}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}