{# empty Twig template #}
{% extends '::connect-base.html.twig' %}

{% block body %}
    
    <h2>
        Bonjour {{ user }},    {% if contacts is not empty %}voici votre liste de contacts{% else %}vous n'avez pas de contacts{% endif %}
    </h2>
    
        <a href="{{ path('contact_add')}}" class="btn-close" title="">
               Ajouter un nouveau contact
               <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
    
    {% if contacts is not empty %}
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr class="text-center">
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                {% for contact in contacts%}
                    <tr>
                        <td>{{contact.nom}}</td>
                        <td>{{contact.prenom}}</td>
                        <td>{{contact.email}}</td>
                        <td>{{contact.tel}}</td>
                        <td>
                            <a href="{{path('contact_mod', {id: contact.id})}}" class="btn btn-sm btn-primary">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modifier
                            </a>
                            <a href="{{path('contact_delete', {id: contact.id})}}" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}